<%= form_for([@ruleset, @rule]) do |f| %>
  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @rule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_ownership %>
    <%= f.text_area :product_ownership, :class=>'longer' %>
  </div>
  <div class="field">
    <%= f.label :user_details %>
    <%= f.text_area :user_details, :class=>'longer' %>
  </div>
  <div class="field">
    <%= f.label :ad_id %>
    <%= select("rule", "ad_id",  Ad.all(:select=>"id,ad_title").collect { |a| [a.ad_title, a.id ] }, {:include_blank => false}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
